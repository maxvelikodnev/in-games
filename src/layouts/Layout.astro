---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

interface Props {
	title: string;
	description: string;
	empty?: boolean;
}

const { title, description, empty = false } = Astro.props;

const mode = import.meta.env.MODE;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<style is:inline>
			/* @import url(https://fonts.googleapis.com/css?family=Inter+Tight:regular,500,600,700,500italic&display=swap); */
			@import url(https://fonts.googleapis.com/css?family=Poppins:regular,500,600,700&display=swap);
			@import url(https://fonts.googleapis.com/css?family=Raleway:regular,500,600,700,800,900&display=swap);
			@import url(https://fonts.googleapis.com/css?family=Inter:300,500&display=swap);
		</style>
		{mode === "production" && <link rel="stylesheet" href="./assets/main.css" />}
		<script is:inline src="https://cdn.jsdelivr.net/npm/vanilla-drawers@1.1.21/dist/drawers.umd.js" type="module"></script>
		

		<script is:inline src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js" defer></script>

		<script is:inline src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/Flip.min.js" defer></script>
		<script is:inline src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/Observer.min.js" defer></script>
		<script is:inline src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/EaselPlugin.min.js" defer></script>
		<script is:inline src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js" defer></script>
		<script is:inline src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/CustomEase.min.js" defer></script>


		<script is:inline src="./assets/Physics2DPlugin.js" defer></script>
		<script is:inline src="./assets/InertiaPlugin.js" defer></script>
		<script is:inline src="./assets/PhysicsPropsPlugin.js" defer></script>

		<script is:inline src="./assets/main.js" type="module"></script>

		<title>{title}</title>
	</head>
	<body class="tg-regular">
		{empty ? null : <Header></Header>}
		<main>
			<slot />
		</main>
		{empty ? null : <Footer></Footer>}
		<slot name="drawers" />
	</body>
</html>